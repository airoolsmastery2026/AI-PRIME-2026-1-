{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/node@2.15.12" },
    { "src": "index.html", "use": "@vercel/static@1.0.3" }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@2.15.12",
      "maxDuration": 45
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
